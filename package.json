{
  "name": "hodi",
  "version": "0.1.0",
  "description": "Initialize App faster",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/henil0604/hodi.git"
  },
  "keywords": [
    "typescript"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "bin": {
    "hodi": "./dist/index.js"
  },
  "engines": {
    "node": ">=14.16"
  },
  "files": [
    "dist/*"
  ],
  "scripts": {
    "typecheck": "tsc",
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo node_modules && npm run uninstall:local",
    "start": "node dist/index.js",
    "start:watch": "nodemon dist/index.js",
    "install:local": "npm run uninstall:local && npm i -g .",
    "install:local:watch": "nodemon --ignore dist --exec \"npm i -g .\"",
    "prepare": "npm run build",
    "uninstall:local": "npm uninstall -g hodi"
  },
  "dependencies": {
    "chalk": "5.2.0",
    "commander": "^10.0.0",
    "execa": "^7.0.0",
    "filic": "^3.0.4",
    "fs-extra": "^11.1.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.1.4",
    "ora": "6.1.2",
    "yargs": "^17.7.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.14.0",
    "@types/yargs": "^17.0.22",
    "nodemon": "^2.0.21",
    "tsup": "^6.6.3",
    "type-fest": "^3.6.0",
    "typescript": "^4.9.5"
  }
}